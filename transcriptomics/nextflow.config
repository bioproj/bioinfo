params {
    input = null
    gtf_file=null
    transcripts_fa = null
    genome_fa=null
    control_group=null
    treatment_group=null
    cutStr=""
    outdir="out"
}
process {

    cpus   = 2 
    memory = 2.GB
    time   = 4.h

    withLabel:process_medium {
        cpus   = 2 
        memory = 4.GB
        time   = 4.h
    }
    withName:FASTQC {
        cpus   = 1 
        memory = 1.GB
        time   = 1.h
    }
}
docker.enabled=true

report.enabled=true
report.overwrite=true
report.file="run-info/report.html"

timeline.enabled=true
timeline.overwrite=true
timeline.file="run-info/timeline.html"

trace.enabled=true
trace.overwrite=true
trace.file="run-info/trace.txt"